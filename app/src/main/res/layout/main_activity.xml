<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/home_screen_picture"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/spacing_loosest"
                />
               <TextView
                       android:fontFamily="@font/now_bold"
                       android:paddingHorizontal="@dimen/spacing_default"
                       android:paddingTop="@dimen/spacing_default"
                       android:textSize="@dimen/ds_font_size_page_header"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Hi, I am Aniruddha"
                       android:textColor="@color/gray_95"
                       android:gravity="center"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginHorizontal="@dimen/spacing_default"
                      android:fontFamily="@font/now_regular"
                      android:textSize="@dimen/ds_font_size_body"
                      android:textColor="@color/gray_95"
                      android:text="                 Android Developer"
                      android:gravity="center"
                      android:layout_marginBottom="@dimen/spacing_default"/>

            <TextView
                    android:fontFamily="@font/now_medium"
                    android:textSize="@dimen/ds_font_size_section_header"
                    android:paddingHorizontal="@dimen/spacing_default"
                    android:paddingTop="@dimen/spacing_default"
                    android:paddingBottom="@dimen/spacing_tight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What I do:"
                    android:textColor="@color/gray_95"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_default"
            android:fontFamily="@font/now_regular"
            android:textSize="@dimen/ds_font_size_body"
                      android:textColor="@color/gray_95"
            android:text="Develop aesthetically pleasing and efficient Android Applications."
            android:layout_marginBottom="@dimen/spacing_default"/>

            <com.aniruddhapimple.design_system.components.containers.ElevatedCardContainer
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/work_ex_layout"
                                        android:onClick="onWorkExProjectsClick">
                            <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Work Experience"
                            android:id="@+id/link_table_we_textview"/>
                            <ImageView
                                    android:id="@+id/link_table_we_imageview"
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/ic_chevron_right_black_24dp"
                                    android:gravity="right|end"/>
                        </RelativeLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_50" android:layout_marginHorizontal="@dimen/spacing_tight"/>
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="onWorkExProjectsClick"
                    android:id="@+id/project_layout">
                        <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Projects"
                                android:id="@+id/link_table_projects_textview"/>
                        <ImageView
                                android:id="@+id/link_table_projects_imageview"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_chevron_right_black_24dp"
                                android:gravity="right|end"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_50" android:layout_marginHorizontal="@dimen/spacing_tight"/>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skills"
                                android:id="@+id/link_table_skills_textview"/>
                        <ImageView
                                android:id="@+id/link_table_skills_imageview"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_chevron_right_black_24dp"
                                android:gravity="right|end"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_50" android:layout_marginHorizontal="@dimen/spacing_tight"/>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Education"
                                android:id="@+id/link_table_education_textview"/>
                        <ImageView
                                android:id="@+id/link_table_education_imageview"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_50" android:layout_marginHorizontal="@dimen/spacing_tight"/>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activities"
                                android:id="@+id/link_table_activities_textview"/>
                        <ImageView
                                android:id="@+id/link_table_activities_imageview"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_chevron_right_black_24dp"
                                android:gravity="right|end"/>
                    </RelativeLayout>

                </LinearLayout>


            </com.aniruddhapimple.design_system.components.containers.ElevatedCardContainer>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About this app"
                    android:textSize="@dimen/ds_font_size_page_header"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/spacing_default"
                    android:paddingTop="@dimen/spacing_default"
                    android:fontFamily="@font/now_bold"
                    android:textColor="@color/gray_95"/>
            <com.aniruddhapimple.design_system.components.cards.HomeCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Design System"
                    app:description="This cardview is a custom cardview built for resusability along with other custom views you'll notice throughout the application."
            />
        <com.aniruddhapimple.design_system.components.cards.HomeCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Firebase"
                app:description="All information you see here is queried from the Google Cloud Firestore"/>

        <com.aniruddhapimple.design_system.components.cards.HomeCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Notifications"
                app:description="Using Google Cloud Messaging this app is capable of sending notifications."
                app:callToAction="Press this to get a notification."/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>