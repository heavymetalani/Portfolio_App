<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:id="@+id/home_screen_picture"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/spacing_loosest"
                />
               <TextView
                       android:fontFamily="@font/now_bold"
                       android:paddingHorizontal="@dimen/spacing_default"
                       android:paddingTop="@dimen/spacing_default"
                       android:textSize="@dimen/ds_font_size_page_header"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Hi, I am Aniruddha"
                       android:textColor="@color/gray_95"
                       android:gravity="center"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginHorizontal="@dimen/spacing_default"
                      android:fontFamily="@font/now_regular"
                      android:textSize="@dimen/ds_font_size_body"
                      android:textColor="@color/gray_95"
                      android:text="                 Android Developer"
                      android:gravity="center"
                      android:layout_marginBottom="@dimen/spacing_default"/>

            <TextView
                    android:fontFamily="@font/now_medium"
                    android:textSize="@dimen/ds_font_size_section_header"
                    android:paddingHorizontal="@dimen/spacing_default"
                    android:paddingTop="@dimen/spacing_default"
                    android:paddingBottom="@dimen/spacing_tight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What I do:"
                    android:textColor="@color/gray_95"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_default"
            android:fontFamily="@font/now_regular"
            android:textSize="@dimen/ds_font_size_body"
                      android:textColor="@color/gray_95"
            android:text="Develop aesthetically pleasing and efficient Android Applications."
            android:layout_marginBottom="@dimen/spacing_default"/>

            <com.aniruddhapimple.design_system.components.containers.ElevatedCardContainer
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/work_ex_layout"
                                        android:onClick="onWorkExProjectsClick">
                            <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Work Experience"
                            android:id="@+id/link_table_we_textview"/>
                            <ImageView
                                    android:id="@+id/link_table_we_imageview"
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/ic_chevron_right_black_24dp"
                                    android:gravity="right|end"/>
                        </RelativeLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_50" android:layout_marginHorizontal="@dimen/spacing_tight"/>
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="onWorkExProjectsClick"
                    android:id="@+id/project_layout">
                        <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Projects"
                                android:id="@+id/link_table_projects_textview"/>
                        <ImageView
                                android:id="@+id/link_table_projects_imageview"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_chevron_right_black_24dp"
                                android:gravity="right|end"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_50" android:layout_marginHorizontal="@dimen/spacing_tight"/>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                        <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skills and Activities"
                                android:id="@+id/link_table_skills_textview"/>
                        <ImageView
                                android:id="@+id/link_table_skills_imageview"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_chevron_right_black_24dp"
                                android:gravity="right|end"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_50" android:layout_marginHorizontal="@dimen/spacing_tight"/>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:onClick="onWorkExProjectsClick">
                        <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Education"
                                android:id="@+id/link_table_education_textview"/>
                        <ImageView
                                android:id="@+id/link_table_education_imageview"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>
                    </RelativeLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray_50" android:layout_marginHorizontal="@dimen/spacing_tight"/>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                    android:onClick="onAboutAppClick">
                        <com.aniruddhapimple.design_system.components.typography.SectionHeaderTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About this app"
                                android:id="@+id/link_table_activities_textview"/>
                        <ImageView
                                android:id="@+id/link_table_activities_imageview"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_chevron_right_black_24dp"
                                android:gravity="right|end"/>
                    </RelativeLayout>

                </LinearLayout>


            </com.aniruddhapimple.design_system.components.containers.ElevatedCardContainer>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About me"
                    android:textSize="@dimen/ds_font_size_page_header"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/spacing_default"
                    android:paddingTop="@dimen/spacing_default"
                    android:fontFamily="@font/now_bold"
                    android:textColor="@color/gray_95"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="@color/gray_95" android:text="Address:"
                android:fontFamily="@font/now_medium"
                android:textSize="@dimen/ds_font_size_section_header"
                android:paddingTop="@dimen/spacing_tight"
                android:paddingLeft="@dimen/spacing_default"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textColor="@color/gray_95" android:text="19 Lincoln Street, Jersey City, NJ 07307"
                          android:fontFamily="@font/now_regular"
                          android:textSize="@dimen/ds_font_size_body"
                          android:paddingHorizontal="@dimen/spacing_default"
                android:paddingVertical="@dimen/spacing_tight"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="Phone:"
                      android:fontFamily="@font/now_medium"
                      android:textSize="@dimen/ds_font_size_section_header"
                      android:paddingTop="@dimen/spacing_tight"
                      android:paddingLeft="@dimen/spacing_default"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="+1 551-263-6720"
                      android:fontFamily="@font/now_regular"
                      android:textSize="@dimen/ds_font_size_body"
                      android:paddingHorizontal="@dimen/spacing_default"
                      android:paddingVertical="@dimen/spacing_tight"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="E-mail:"
                      android:fontFamily="@font/now_medium"
                      android:textSize="@dimen/ds_font_size_section_header"
                      android:paddingTop="@dimen/spacing_tight"
                      android:paddingLeft="@dimen/spacing_default"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="aniruddhapimple1996@gmail.com"
                      android:fontFamily="@font/now_regular"
                      android:textSize="@dimen/ds_font_size_body"
                      android:paddingHorizontal="@dimen/spacing_default"
                      android:paddingVertical="@dimen/spacing_tight"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="LinkedIn"
                      android:fontFamily="@font/now_medium"
                      android:textSize="@dimen/ds_font_size_section_header"
                      android:paddingTop="@dimen/spacing_tight"
                      android:paddingLeft="@dimen/spacing_default"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="https://www.linkedin.com/in/aniruddhapimple/"
                      android:fontFamily="@font/now_regular"
                      android:onClick="onWebLinkClick"
                      android:id="@+id/linkedin_link_text_view"
                      android:textSize="@dimen/ds_font_size_body"
                      android:paddingHorizontal="@dimen/spacing_default"
                      android:paddingVertical="@dimen/spacing_tight"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="Github"
                      android:fontFamily="@font/now_medium"
                      android:textSize="@dimen/ds_font_size_section_header"
                      android:paddingTop="@dimen/spacing_tight"
                      android:paddingLeft="@dimen/spacing_default"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="https://github.com/heavymetalani"
                      android:fontFamily="@font/now_regular"
                      android:onClick="onWebLinkClick"
                      android:id="@+id/github_link_text_view"
                      android:textSize="@dimen/ds_font_size_body"
                      android:paddingHorizontal="@dimen/spacing_default"
                      android:paddingVertical="@dimen/spacing_tight"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="YouTube"
                      android:fontFamily="@font/now_medium"
                      android:textSize="@dimen/ds_font_size_section_header"
                      android:paddingTop="@dimen/spacing_tight"
                      android:paddingLeft="@dimen/spacing_default"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textColor="@color/gray_95" android:text="https://www.youtube.com/channel/UCnoKdoZsX3wNptzg3ccPyRw"
                      android:fontFamily="@font/now_regular"
                      android:onClick="onWebLinkClick"
                      android:id="@+id/youtube_link_text_view"
                      android:textSize="@dimen/ds_font_size_body"
                      android:paddingHorizontal="@dimen/spacing_default"
                      android:paddingVertical="@dimen/spacing_tight"/>
            <com.aniruddhapimple.design_system.components.buttons.TertiaryButton android:layout_width="match_parent"
                                                                                 android:layout_height="wrap_content"
            android:text="RESUME IN PDF"
            android:background="@color/blue_90" android:gravity="center"
            android:layout_margin="@dimen/spacing_loose"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>