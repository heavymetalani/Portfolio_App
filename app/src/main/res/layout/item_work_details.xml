<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.aniruddhapimple.design_system.components.containers.ElevatedCardContainer
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/work_position_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textColor="@color/gray_0"
                        android:textSize="@dimen/ds_font_size_section_header"
                        android:fontFamily="@font/now_medium"
                        android:paddingHorizontal="@dimen/spacing_default"
                        android:paddingTop="@dimen/spacing_default"
                />
                <com.aniruddhapimple.design_system.components.typography.BodyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/work_date_text_view"
                        android:text="Date"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                    android:id="@+id/work_employer_text_view"
                    android:textColor="@color/gray_0"
                    android:fontFamily="@font/now_regular"
                    android:textSize="@dimen/ds_font_size_body"
                    android:paddingHorizontal="@dimen/spacing_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="Employer"/>
            <com.aniruddhapimple.design_system.components.typography.BodyTextView
                    android:id="@+id/work_details_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Details"/>
        </LinearLayout>

    </com.aniruddhapimple.design_system.components.containers.ElevatedCardContainer>


</LinearLayout>